{% schema %}
{
  "name": "Delivery Date Picker",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Choose Your Delivery Date"
    }
  ],
  "presets": [
    {
      "name": "Delivery Date Picker"
    }
  ]
}
{% endschema %}

<div class="delivery-date-picker">
  <h2>{{ section.settings.section_title }}</h2>
  <input type="text" id="delivery-date-picker-input" placeholder="Select a date">
</div>

<style>
/* Your custom CSS for the delivery date picker section */
.delivery-date-picker {
  margin-top: 20px;
}

.delivery-date-picker h2 {
  font-size: 1.5em;
  margin-bottom: 10px;
}

#delivery-date-picker-input {
  width: 100%;
  padding: 10px;
  font-size: 1em;
  border: 1px solid #ccc;
  border-radius: 4px;
}
</style>

<script src="https://cdn.shopify.com/s/files/1/0860/2877/9835/files/pikaday.js?v=1725772108" defer></script>
<link rel="stylesheet" href="https://cdn.shopify.com/s/files/1/0860/2877/9835/files/pikaday.css?v=1725772108">

<script>
document.addEventListener('DOMContentLoaded', function() {
  const datePickerInput = document.getElementById('delivery-date-picker-input');
  if (datePickerInput) {
    // Initialize Pikaday date picker
    new Pikaday({
      field: datePickerInput,
      format: 'YYYY-MM-DD',
      onSelect: function(date) {
        console.log('Selected date: ' + date.toISOString());
        // You can add code here to handle the selected date
      }
    });
  }
});
</script>
