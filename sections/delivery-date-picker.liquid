{% schema %}
{
  "name": "Delivery Date Picker",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Choose Your Delivery Date"
    }
  ],
  "presets": [
    {
      "name": "Delivery Date Picker"
    }
  ]
}
{% endschema %}

<div class="delivery-date-picker">
  <h2>{{ section.settings.section_title }}</h2>
  <div id="delivery-date-picker-app"></div>
</div>

<style>
/* Your custom CSS for the delivery date picker section */
.delivery-date-picker {
  margin-top: 20px;
}

.delivery-date-picker h2 {
  font-size: 1.5em;
  margin-bottom: 10px;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const appContainer = document.getElementById('delivery-date-picker-app');
  if (appContainer) {
    // Example of initializing a date picker
    const datePicker = new Pikaday({
      field: appContainer,
      format: 'YYYY-MM-DD',
      onSelect: function(date) {
        console.log('Selected date: ' + date.toISOString());
        // You can add code here to handle the selected date
      }
    });
  }
});
</script>
