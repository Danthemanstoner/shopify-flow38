<!DOCTYPE html>
<html>
  <head>
    <title>Locator</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <style>
      html,
      body {
        height: 100%;
        margin: 0;
      }

      gmpx-store-locator {
        width: 100%;
        height: 100%;

        /* These parameters customize the appearance of Locator Plus. See the documentation at
           https://github.com/googlemaps/extended-component-library/blob/main/src/store_locator/README.md
           for more information. */
        --gmpx-color-surface: #fff;
        --gmpx-color-on-surface: #212121;
        --gmpx-color-on-surface-variant: #757575;
        --gmpx-color-primary: #1967d2;
        --gmpx-color-outline: #e0e0e0;
        --gmpx-fixed-panel-width-row-layout: 28.5em;
        --gmpx-fixed-panel-height-column-layout: 65%;
        --gmpx-font-family-base: "Roboto", sans-serif;
        --gmpx-font-family-headings: "Roboto", sans-serif;
        --gmpx-font-size-base: 0.875rem;
        --gmpx-hours-color-open: #188038;
        --gmpx-hours-color-closed: #d50000;
        --gmpx-rating-color: #ffb300;
        --gmpx-rating-color-empty: #e0e0e0;
      }
    </style>
    <script>
      const CONFIGURATION = {
        "locations": [
          {"title":"The Fruit Box","address1":"893 Pattanakarn Road","address2":"Bangkok, Bangkok, Thailand","coords":{"lat":13.7384216,"lng":100.6075788},"placeId":"ChIJQ-Thepaf4jARJQqlhnzVPF4"}
        ],
        "mapOptions": {"center":{"lat":38.0,"lng":-100.0},"fullscreenControl":true,"mapTypeControl":false,"streetViewControl":false,"zoom":4,"zoomControl":true,"maxZoom":17,"mapId":""},
        "mapsApiKey": "YOUR_API_KEY_HERE",
        "capabilities": {"input":false,"autocomplete":false,"directions":false,"distanceMatrix":false,"details":false,"actions":false}
      };

    </script>
    <script type="module">
      document.addEventListener('DOMContentLoaded', async () => {
        await customElements.whenDefined('gmpx-store-locator');
        const locator = document.querySelector('gmpx-store-locator');
        locator.configureFromQuickBuilder(CONFIGURATION);
      });
    </script>
  </head>
  <body>
    <!-- Please note unpkg.com is unaffiliated with Google Maps Platform. -->
    <script type="module" src="https://unpkg.com/@googlemaps/extended-component-library@0.6"></script>

    <!-- Uses components from the Extended Component Library; see
         https://github.com/googlemaps/extended-component-library for more information
         on these HTML tags and how to configure them. -->
    <gmpx-api-loader key="YOUR_API_KEY_HERE" solution-channel="GMP_QB_locatorplus_v10_c"></gmpx-api-loader>
    <gmpx-store-locator map-id="DEMO_MAP_ID"></gmpx-store-locator>
  </body>
</html>
                        
</footer>

{% schema %}
{
  "name": "t:sections.footer-main.name",
  "max_blocks": 4,
  "settings": [
    {
      "type": "select",
      "id": "alignment",
      "label": "t:sections.footer-main.settings.alignment.label",
      "options": [
        {
          "value": "left",
          "label": "t:all.Left"
        },
        {
          "value": "center",
          "label": "t:all.Center"
        }
      ],
      "default": "left"
    },
    {
      "type": "header",
      "content": "t:all.Color"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "label": "t:all.Color_scheme",
      "default": "accent",
      "options": [
        {
          "value": "white",
          "label": "t:all.Minimal"
        },
        {
          "value": "light",
          "label": "t:all.Light"
        },
        {
          "value": "accent",
          "label": "t:all.Feature"
        },
        {
          "value": "dark",
          "label": "t:all.Dark"
        }
      ]
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "t:all.Text",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "t:all.Heading",
          "default": "Text details"
        },
        {
          "type": "richtext",
          "id": "richtext",
          "label": "t:all.Text",
          "default": "<p>Create a captivating brand story, explain details of your products or highlight store promotions</p>"
        }
      ]
    },
    {
      "type": "menu",
      "name": "t:all.Navigation",
      "settings": [
        {
          "type": "text",
          "id": "menu_title",
          "label": "t:all.Heading",
          "default": "Quick links"
        },
        {
          "type": "link_list",
          "id": "footer_linklist",
          "label": "t:sections.footer-main.blocks.menu.settings.footer_linklist.label",
          "default": "footer",
          "info": "t:sections.footer-main.blocks.menu.settings.footer_linklist.info"
        }
      ]
    },
    {
      "type": "newsletter",
      "name": "t:all.Newsletter",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "newsletter_title",
          "label": "t:all.Heading",
          "default": "Newsletter"
        },
        {
          "type": "richtext",
          "id": "footer_newsletter_description",
          "label": "t:sections.footer-main.blocks.newsletter.settings.footer_newsletter_description.label"
        }
      ]
    },
    {
      "type": "social",
      "name": "t:sections.footer-main.blocks.social.name",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "social_title",
          "label": "t:all.Heading",
          "default": "Get connected"
        },
        {
          "type": "paragraph",
          "content": "t:sections.footer-main.blocks.social.settings.paragraph-1.content"
        }
      ]
    },
    {
      "type": "image",
      "name": "t:all.Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:all.Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "t:all.Link",
          "info": "t:all.Optional"
        },
        {
          "type": "text",
          "id": "title",
          "label": "t:all.Title",
          "info": "t:all.Optional"
        }
      ]
    },
    {
      "type": "follow_on_shop",
      "name": "t:sections.footer-main.blocks.follow_on_shop.name",
      "limit": 1,
      "settings": [
        {
          "type": "paragraph",
          "content": "t:sections.footer-main.blocks.follow_on_shop.settings.paragraph-0.content"
        },
        {
          "type": "text",
          "id": "title",
          "label": "t:all.Heading",
          "default": "Follow us on the Shop app"
        }
      ]
    }
  ]
}
{% endschema %}
