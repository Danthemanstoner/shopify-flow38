<noscript>{{ 'section-text-blocks.min.css' | asset_url | stylesheet_tag }}</noscript>

<div class="homepage-sections-wrapper text-advert-section homepage-sections-wrapper--{{ section.settings.colors }}" data-wetheme-section-type="text--text-adverts" data-wetheme-section-id="{{ section.id }}">
  <!-- wiggle for vouchers -->
  <div id="shopify-section-template--22517881897275__text_text_adverts_XTaGgp" class="shopify-section homepage-section--text-adverts-wrapper shown-on-scroll animated fadeInUp">
    <link href="//thefruitbox.co/cdn/shop/t/8/assets/section-text-blocks.min.css?v=86379295954260848761712737655" rel="stylesheet" type="text/css" media="all">
    <noscript><link href="//thefruitbox.co/cdn/shop/t/8/assets/section-text-blocks.min.css?v=86379295954260848761712737655" rel="stylesheet" type="text/css" media="all" /></noscript>
  
    <style>
      @keyframes pulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.05); }
      }
      
      .grid__item.large--one-third.medium--one-third {
        animation: pulse 3s infinite ease-in-out;
      }
    </style>
  </div>
  <!-- Remove Border Lines -->
  <div id="shopify-section-template--22517881897275__text_text_adverts_XTaGgp" class="shopify-section homepage-section--text-adverts-wrapper shown-on-scroll animated fadeInUp">
    <link href="//thefruitbox.co/cdn/shop/t/8/assets/section-text-blocks.min.css?v=86379295954260848761712737655" rel="stylesheet" type="text/css" media="all">
    <noscript><link href="//thefruitbox.co/cdn/shop/t/8/assets/section-text-blocks.min.css?v=86379295954260848761712737655" rel="stylesheet" type="text/css" media="all" /></noscript>
    
    <style>
      @keyframes pulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.05); }
      }
      
      .grid__item.large--one-third.medium--one-third {
        animation: pulse 3s infinite ease-in-out;
      }
  
      /* Specific override for border on screens wider than 768px */
      @media screen and (min-width: 768px) {
        .homepage-sections-wrapper--white .text-advert-section .grid__item {
          border-left: none !important; /* Removes left border */
        }
      }
    </style>
  </div>
  
{% case section.blocks.size %}
  {% when 1 %}
    {%- assign column_size = 'large--one-whole medium--one-whole' -%}
    {%- assign column_amount = 'text-advert-section--one-column' -%}
  {% when 2 %}
    {%- assign column_size = 'large--one-half medium--one-half' -%}
  {% when 3 %}
    {%- assign column_size = 'large--one-third medium--one-third' -%}
{% endcase %}
  <div class="wrapper-padded small--hide">
    <div class="grid text-advert-section {{ column_amount }}">

      {% for block in section.blocks %}
        {%- assign advert_has_link = false -%}
        {% if block.settings.link != blank %}
          {%- assign advert_has_link = true -%}
        {% endif %}

        <div class="grid__item {{ column_size }}" {{ block.shopify_attributes }}>
          {% if advert_has_link %}
            {% if forloop.index == 1 %}
              <a href="?discount=GetFreeShipping">
            {% elsif forloop.index > 1 %}
              <a href="{{ block.settings.link }}">
            {% endif %}
          {% endif %}
            {% if block.settings.heading != blank %}
              <span class="text-advert-section--header h5">{{ block.settings.heading | escape }}</span>
            {% endif %}

            {% if block.settings.subheading != blank %}
              <span class="text-advert-section--sub-header">{{ block.settings.subheading | escape }}</span>
            {% endif %}

          {% if advert_has_link %}
            </a>
          {% endif %}

        </div>
      {% endfor %}
    </div>
  </div>
  <div class="container large--hide small--show medium--hide">
    <div class="grid text-advert-section swiper mobile-homepage-text-adverts {{ column_amount }}">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          {%- assign advert_has_link = false -%}
          {% if block.settings.link != blank %}
            {%- assign advert_has_link = true -%}
          {% endif %}

          <div class="swiper-slide grid__item {{ column_size }}" {{ block.shopify_attributes }}>
            {% if advert_has_link %}
              {% if forloop.index == 1 %}
                <a href="?discount=GetFreeShipping">
              {% elsif forloop.index > 1 %}
                <a href="{{ block.settings.link }}">
              {% endif %}
            {% endif %}
              {% if block.settings.heading != blank %}
                <span class="text-advert-section--header h5">{{ block.settings.heading }}</span>
              {% endif %}

              {% if block.settings.subheading != blank %}
                <span class="text-advert-section--sub-header">{{ block.settings.subheading }}</span>
              {% endif %}

            {% if advert_has_link %}
              </a>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>
