document.addEventListener('DOMContentLoaded', function() {
    console.log('DOM fully loaded');

    const gameCanvas = document.getElementById('gameCanvas');
    const gameContainer = document.getElementById('gameContainer');

    if (!gameCanvas) {
        console.error('Game canvas not found!');
        return;
    }

    if (!gameContainer) {
        console.error('Game container not found!');
        return;
    }

    console.log('Game elements found');

    // Ensure the canvas is visible and clickable
    gameCanvas.style.zIndex = '10';
    gameCanvas.style.position = 'relative';

    // Add a visible border to the canvas for debugging
    gameCanvas.style.border = '2px solid red';

    // Set canvas size
    gameCanvas.width = 800;
    gameCanvas.height = 600;

    const ctx = gameCanvas.getContext('2d');

    // Draw "Click to Start" text
    ctx.fillStyle = 'black';
    ctx.font = '30px Arial';
    ctx.textAlign = 'center';
    ctx.fillText('Click to Start', gameCanvas.width / 2, gameCanvas.height / 2);

    function startGame() {
        console.log('Game started!');
        ctx.clearRect(0, 0, gameCanvas.width, gameCanvas.height);
        ctx.fillText('Game Running', gameCanvas.width / 2, gameCanvas.height / 2);
        // Your game logic would go here
    }

    gameCanvas.addEventListener('click', function(event) {
        console.log('Canvas clicked at:', event.clientX, event.clientY);
        startGame();
    });

    // Add a fallback button in case the canvas click doesn't work
    const startButton = document.createElement('button');
    startButton.textContent = 'Start Game';
    startButton.style.position = 'absolute';
    startButton.style.top = '10px';
    startButton.style.left = '10px';
    startButton.style.zIndex = '20';
    startButton.addEventListener('click', startGame);
    gameContainer.appendChild(startButton);

    console.log('Event listeners added');
});

console.log('Script execution completed');

