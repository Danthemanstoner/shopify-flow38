<script>
    document.addEventListener('DOMContentLoaded', function() {
        const toggleButton = document.getElementById('expandable-content-toggle');
        const remainingText = document.getElementById('remaining-text');
    
        toggleButton.addEventListener('click', function() {
            // Check if 'remaining-text' is currently hidden
            if (remainingText.classList.contains('hide')) {
                remainingText.classList.remove('hide'); // Show text
                toggleButton.textContent = 'Read Less';
            } else {
                remainingText.classList.add('hide'); // Hide text
