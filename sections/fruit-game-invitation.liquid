<div class="fruit-game-invitation">
  <div class="fruit-game-content">
    <div class="fruit-game-title">
      <h2 class="homepage-sections--title">
        {{ section.settings.title }}
      </h2>
    </div>
    
    <div class="fruit-game-subtitle">
      <p>{{ section.settings.subtitle }}</p>
    </div>
    
    <div class="homepage-section-btn-container">
      <a class="btn homepage-section-btn" href="{{ section.settings.button_link }}" data-section-main-link="">
        {{ section.settings.button_text }}
      </a>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Fruit Game Invitation",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Play Our Fruit Game!"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Have fun and win discounts on your favorite fruit boxes!"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Play Now"
    }
  ],
  "presets": [
    {
      "name": "Fruit Game Invitation",
      "category": "Custom"
    }
  ]
}
{% endschema %}

{% stylesheet %}
.fruit-game-invitation {
  background-color: #f8f8f8;
  padding: 30px 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.fruit-game-content {
  max-width: 600px;
  text-align: center;
}

.fruit-game-invitation .homepage-sections--title {
  color: #18533A;
  margin-bottom: 15px;
  font-size: 32px;
}

.fruit-game-invitation .fruit-game-subtitle p {
  color: #333;
  margin-bottom: 20px;
  font-size: 18px;
}

.fruit-game-invitation .homepage-section-btn {
  background-color: #18533A;
  color: #fff;
  padding: 10px 20px;
  text-decoration: none;
  border-radius: 4px;
  transition: background-color 0.3s ease;
  display: inline-block;
}

.fruit-game-invitation .homepage-section-btn:hover {
  background-color: #123c2a;
}

@media (max-width: 768px) {
  .fruit-game-content {
    max-width: 90%;
  }
  
  .fruit-game-invitation .homepage-sections--title {
    font-size: 28px;
  }
  
  .fruit-game-invitation .fruit-game-subtitle p {
    font-size: 16px;
  }
}
{% endstylesheet %}
